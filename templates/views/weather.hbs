<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    {{>navbar}}

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
         <div class="main_content">
             <form action="" class="temp_form">
                 <input type="text" id="cityName" placeholder="Enter your City Name" autocomplete="off">
                 <input type="submit" value='Search' id="submitBtn">
             </form>
         </div>
         <div class="temp_info">
             <div class="top_layer">
                {{!-- <p id='day'>Tuesday</p>
                 <p id='today_date'>13 Oct</p> --}}
             </div>
             <div class="main_layer">
                 <p id="city_name">See the Status here</p>
                 <div class="middle_layer data_hide">
                    <p id="temp"><span id="temp_real_value">0</span><sup>o</sup>C</p> 
                    <p id="temp_status"><i class="fas fa-cloud"></i> </p>
                 </div>
             </div>
         </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
</body>

</html>